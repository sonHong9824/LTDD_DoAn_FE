<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:id="@+id/ll_1"
        android:paddingHorizontal="3dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/btn_back_seat"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/back"
            android:scaleType="centerCrop"
            android:background="@drawable/custom_btn_back"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
        <TextView
            android:id="@+id/tv_cinema_seat"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="CGV HCM"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginStart="15dp"
            android:textSize="22sp"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/img_screen"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_1"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:src="@drawable/custom_screen"/>
    <TextView
        android:id="@+id/tv_screen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MÀN HÌNH"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/img_screen"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="-35dp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rc_seat"
        app:layout_constraintTop_toBottomOf="@id/tv_screen"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:padding="10dp"
        android:nestedScrollingEnabled="true"
        android:layout_marginBottom="30dp"/>
    <View
        android:id="@+id/line_view"
        app:layout_constraintTop_toBottomOf="@id/rc_seat"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DDDDDD"/>
    <LinearLayout
        android:id="@+id/ll_2"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@id/line_view"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="8dp"
            android:background="#E5E5E5"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="13dp"
            android:textSize="13sp"
            android:textStyle="bold"
            android:text="Đã đặt"/>

        <TextView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="8dp"
            android:background="#E65E9F"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="13dp"
            android:textSize="13sp"
            android:textStyle="bold"
            android:text="Ghế bạn chọn"/>

        <TextView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="8dp"
            android:background="#BC8AE0"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="13dp"
            android:textSize="13sp"
            android:textStyle="bold"
            android:text="Ghế thường"/>

        <TextView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="8dp"
            android:background="#F7C5C3"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textStyle="bold"
            android:text="Ghế VIP"/>

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        app:layout_constraintTop_toBottomOf="@id/ll_2">
        <View
            android:id="@+id/line_view2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:background="#DDDDDD"/>
        <TextView
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:id="@+id/tv_scope_seat"
            app:layout_constraintTop_toBottomOf="@id/line_view2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18+"
            android:background="@drawable/custom_tv_scope"
            android:textColor="@color/white"
            android:textStyle="normal"
            android:paddingHorizontal="10dp"
            android:paddingVertical="5dp"
            android:textSize="15sp"/>
        <TextView
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:id="@+id/tv_movie_seat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/line_view2"
            app:layout_constraintStart_toEndOf="@+id/tv_scope_seat"
            android:text="Âm Dương Lộ"
            android:textColor="#515151"
            android:textSize="20sp"
            android:paddingTop="2dp"
            android:gravity="center"
            android:layout_marginStart="10dp"
            android:textStyle="bold"/>
        <LinearLayout
            android:id="@+id/ll_3"
            android:layout_marginHorizontal="10dp"
            app:layout_constraintTop_toBottomOf="@id/tv_movie_seat"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_showtime_seat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12:30 ~ 14:00"
                android:textSize="17sp"/>
            <View
                android:layout_width="2dp"
                android:layout_marginHorizontal="10dp"
                android:layout_height="match_parent"
                android:background="#ADA8A8"/>
            <TextView
                android:id="@+id/tv_date_seat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="17-05-2026"
                android:textSize="17sp"/>
            <View
                android:layout_width="2dp"
                android:layout_marginHorizontal="10dp"
                android:layout_height="match_parent"
                android:background="#ADA8A8"/>
            <TextView
                android:id="@+id/tv_language_seat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phụ đề"
                android:textSize="17sp"/>

        </LinearLayout>
        <TextView
            android:layout_marginHorizontal="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/ll_3"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Tạm tính"
            android:textSize="19sp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/tv_total_seat"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/ll_3"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="0đ"
            android:textStyle="bold"
            android:textSize="19sp"/>
        <Button
            android:id="@+id/btn_next_seat"
            android:layout_marginHorizontal="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tiếp tục"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/tv_total_seat"
            android:layout_marginTop="15dp"
            android:paddingVertical="10dp"
            android:backgroundTint="#D72D8D"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_border_review">
    <ImageView
        android:id="@+id/user"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:src="@drawable/user_movie"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toTopOf="@id/tv_name_review"
        app:layout_constraintBottom_toBottomOf="@id/tv_date_review"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_name_review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Nguyen Van A"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/user"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"/>
    <TextView
        android:id="@+id/tv_date_review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="22/22/2222"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_name_review"
        app:layout_constraintStart_toStartOf="@id/tv_name_review"
        android:textSize="18sp"/>
    <TextView
        android:id="@+id/tv_star_review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/star"
        android:drawablePadding="5dp"
        android:text="4/5"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="@id/tv_name_review"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="15dp"
        android:textColor="#F99728"
        android:paddingHorizontal="10dp"
        android:paddingVertical="5dp"
        android:background="@drawable/background_star"/>
    <TextView
        android:id="@+id/tv_desc_review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kén người mê"
        app:layout_constraintTop_toTopOf="@id/tv_date_review"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="18sp"
        android:layout_marginEnd="15dp"
        android:textColor="#F99728"/>
    <TextView
        android:id="@+id/tv_content_review"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nếu bạn muốn tạo background mờ nhưng vẫn thấy nội dung phía sau (ví dụ: hình nền), thì cách này là đúng chuẩn. Cần giúp tạo overlay mờ cho toàn màn hình cũng được luôn nha!"
        app:layout_constraintTop_toBottomOf="@id/tv_date_review"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="15dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:textSize="20sp"
        android:layout_marginTop="15dp" />
    <TextView
        android:id="@+id/tv_xemthem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Xem thêm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_content_review"
        app:layout_constraintStart_toStartOf="@id/tv_content_review"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/ll_1"
        android:paddingHorizontal="3dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/btn_back_review"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/back"
            android:scaleType="centerCrop"
            android:background="@drawable/custom_btn_back"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Viết đánh giá"
            android:textColor="#2E3333"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginStart="15dp"
            android:textSize="20sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_2"
        app:layout_constraintTop_toBottomOf="@id/ll_1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F9F9F9"
        android:paddingVertical="10dp"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">
            <ImageView
                android:id="@+id/img_poster_review"
                android:layout_width="40dp"
                android:layout_height="45dp"
                android:src="@drawable/movie2"
                android:scaleType="centerCrop" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_name_wreview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Panor: Tà Thuật Huyết Ngải"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginStart="15dp"/>
    </LinearLayout>
    <View
        android:id="@+id/line_1"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/ll_2"
        android:layout_height="1dp"
        android:background="#DDDDDD"/>
    <LinearLayout
        android:id="@+id/ll_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/line_1"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_nhan_de_danh_gia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nhấn để đánh giá"
            android:textSize="15sp"
            android:layout_marginVertical="10dp"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/rating_wreview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3/5 - Tạm ổn"
            android:textSize="20sp"
            android:layout_marginVertical="10dp"
            android:drawableLeft="@drawable/star"
            android:drawablePadding="5dp"
            android:textColor="@color/black"
            android:layout_gravity="center"/>
        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize="1.0"
            android:rating="0"
            android:isIndicator="false"
            android:progressTint="#F99728"
            android:layout_marginBottom="10dp"
            style="@style/Widget.AppCompat.RatingBar"/>
    </LinearLayout>

    <View
        android:id="@+id/line_2"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/ll_3"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:background="#DDDDDD"/>
    <TextView
        android:id="@+id/tv_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cảm nhận về bộ phim"
        app:layout_constraintTop_toBottomOf="@id/line_2"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_margin="15dp"/>
    <EditText
        android:id="@+id/et_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="150dp"
        app:layout_constraintTop_toBottomOf="@id/tv_1"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="top"
        android:padding="15dp"
        android:textColor="@color/black"
        android:inputType="textMultiLine|textNoSuggestions"
        android:background="@drawable/background_border_review"
        android:hint="Giờ là lúc ngôn từ lên ngôi"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_bot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:background="#FFF"
        app:layout_constraintBottom_toBottomOf="parent">

        <View
            android:id="@+id/line_4"
            android:layout_width="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="1dp"
            android:background="#DDDDDD"/>

        <Button
            android:id="@+id/btn_gui_danh_gia"
            android:layout_marginHorizontal="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gửi đánh giá"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:background="@drawable/rounded_button"
            app:layout_constraintTop_toBottomOf="@id/line_4"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="15dp"
            android:paddingVertical="10dp"
            android:layout_marginBottom="30dp"
            android:textColor="@color/white"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
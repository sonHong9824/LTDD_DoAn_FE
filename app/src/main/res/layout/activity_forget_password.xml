<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="30dp"
    tools:context=".ForgetPasswordActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image1"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:src="@drawable/back"
            android:padding="5dp"/>

        <ImageView
            android:id="@+id/image2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:src="@drawable/ic__lock" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QUÊN MẬT KHẨU"
            android:textStyle="bold"
            android:textColor="#E91E63"
            android:textSize="40dp"
            android:textAllCaps="true"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:textAlignment="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nhập email tài khoản của bạn nếu bạn muốn đặt lại mật khẩu"
            android:textSize="18sp"
            android:textAlignment="center"
            android:gravity="center" />

        <EditText
            android:id="@+id/editEmailForgot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:drawableStart="@drawable/ic_mail"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:hint="Nhập địa chỉ email"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buttonSendOTP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_button"

            android:text="Gửi OTP"
            android:textColor="@color/white" />

    </LinearLayout>

</ScrollView>

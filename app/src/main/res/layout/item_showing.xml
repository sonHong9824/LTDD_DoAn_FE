<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="6dp"
    android:layout_marginStart="6dp"
    android:layout_marginBottom="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="16dp"
    android:elevation="4dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginBottom="5dp"
                android:id="@+id/img_showing"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:scaleType="centerCrop"
                android:src="@drawable/movie1"/>
            <TextView
                android:id="@+id/tv_scope_image"
                android:background="@drawable/custom_scope_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:paddingHorizontal="5dp"
                android:paddingVertical="2dp"
                android:text="18+"
                android:layout_margin="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:paddingStart="6dp"
            android:id="@+id/txt_rating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Chưa có đánh giá"
            android:drawablePadding="5dp"
            android:layout_marginVertical="5dp"
            android:drawableLeft="@drawable/star"
            android:textSize="15sp"/>
        <TextView
            android:paddingStart="6dp"
            android:id="@+id/txt_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="22-11-2022"
            android:layout_marginVertical="5dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="15sp"/>
        <TextView
            android:paddingStart="6dp"
            android:id="@+id/txt_name"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Nhà gia tiên"
            android:textStyle="bold"
            android:textSize="18sp"/>
        <TextView
            android:paddingStart="6dp"
            android:paddingBottom="6dp"
            android:id="@+id/txt_genre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Hài, Gia Đình, Tâm Linh"
            android:textSize="12dp"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>